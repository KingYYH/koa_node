/**index.wxss**/
.container {
  width: 100%;
  height: 100%;
  background:#F5F5F5;
  position: relative;
  padding-bottom: 10px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px 0;
  height: 120px;
  margin-bottom: 10px;
  background: #fff;
  /* background-image: linear-gradient(to right, #FFFFDF, #FFF0AC); */
}

.userinfo-avatar {
  width: 64px;
  height: 64px;
  margin: 10px;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-btn {
  width: 100%;
  height: 100%;
  z-index: 99;
  opacity: 0;
  position: absolute;
}

.m-swiper {
  display: flex;
  padding: 10px;
  box-sizing: border-box;
}

.m-swiper-img {
  flex: 1;
  height: 120px;
  border-radius: 10px;
}

.m-swiper-img:nth-child(2) {
  margin-left: 10px;
}


.m-m-list-p {
  padding: 0 10px;
  box-sizing: border-box;
}

.m-m-list {
  background: #fff;
  padding: 20px 20px;
  box-sizing: border-box;
  border-radius: 10px;
}

.m-m-title {
  font-size: 16px;
  color: #333;
  margin-bottom: 20px;
}

.m-m-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
}

.m-m-item-left {
  display: flex;
  align-items: center;
}

.m-m-item-left-img {
  width: 16px;
  height: 16px;
  margin-right: 6px;
}

.m-into-img {
  width: 30px;
  height: 30px;
}

.m-m-text {
  font-size: 14px;
}

.m-1px {
  border: none;
  position: relative;
}

.m-1px::after {
  content: '';
  position: absolute;
  bottom: 0;
  background: #aaa;
  width: 100%;
  height: 1px;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}